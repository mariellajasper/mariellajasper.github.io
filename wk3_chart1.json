{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Creates year variable, then defined parameters on this and adds sliders.",
  "title": {
    "text": "Productivity UK",
    "subtitle": "Output per hour, Index, base year = 100 | Source: ONS through ECO API",
    "subtitleFontStyle": "italic",
    "subtitleFontSize": 10,
    "anchor": "start",
    "color": "black"
  },
  "width": 300,
  "height": 300,
  "mark": {
    "type": "line",
    "color": "rgb(0,112,192)",
    "strokeWidth": 2,
    "opacity": 1
  },
  "data": {
    "url": "https://api.economicsobservatory.com/gbr/prod?vega",
    "format": {"type": "json"}
  },
  "transform": [
    {"calculate": "year(datum.date)", "as": "year"},
    {"filter": "datum.year>=minYear"},
    {"filter": "datum.year<=maxYear"}
  ],
  "params": [
    {
      "name": "minYear",
      "value": 1971,
      "bind": {
        "input": "range",
        "min": 1971,
        "max": 2023,
        "step": 1,
        "name": "Start year:"
      }
    },
    {
      "name": "maxYear",
      "value": 2023,
      "bind": {
        "input": "range",
        "min": 1971,
        "max": 2023,
        "step": 1,
        "name": "End year:"
      }
    }
  ],
  "encoding": {
    "x": {"field": "date", "type": "temporal", "title": null},
    "y": {
      "field": "value",
      "type": "quantitative",
      "title": null,
      "scale": {"zero": false}
    }
  },
  "config": {}
}